<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start|end"
    android:textAlignment="viewEnd"
    tools:ignore="HardcodedText, UseSwitchCompatOrMaterialXml, UselessParent, TooManyViews">


    <RelativeLayout
        android:id="@+id/espView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:visibility="gone">

        <ScrollView
            android:id="@+id/contentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp"
            android:background="#ff364450">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#777777"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/playerBtn"
                                android:layout_width="104dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#E3E0E8"
                                android:text="ProXcrypt"
                                android:textAlignment="center"
                                android:textColor="#5EE863"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/players"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ff364450"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <Switch
                            android:id="@+id/connect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ff364450"
                            android:checked="true"
                            android:text="proXcrypt"
                            android:textColor="#5EE863" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">
                            <TextView
                                android:id="@+id/shelltxt"
                                android:layout_width="match_parent"
                                android:background="#061a1f"
                                android:text="root@localhost~:#"
                                android:textSize="7dp"
                                android:textColor="#43d426"
                                android:layout_height="180dp">
                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff364450"
                android:gravity="center"
                android:text="ONIVERSAL"
                android:textColor="#Ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignRight="@id/contentView"
            android:gravity="center|right"
            android:text="X"
            android:textColor="#E91E63"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- this is the collapsed layout -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_floatinglogo_foreground"
                tools:ignore="ContentDescription" ></ImageView>>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>